<body style="background-color: white">
<% content_for :nav, render('shared/navbar') %>

<h1 class="text-center margin-top-show"><%=@movie.name%></h1>

<div class= "container margin-top-fifty">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
    <%= cl_image_tag @movie.poster, width: 400 %>
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-offset-2">
      <p class="text-center"><strong>Le synopsis</strong></p>
    <p class="text-justify"><%= @movie.pitch %></p>
    </div>

  </div>


  <div class="row margin-top-fifty">
      <div class="col-xs-12 col-sm-4">
        <p> <iframe width="400" height="360" src="http://www.youtube.com/embed/<%=@movie.trailer%>" frameborder="0" allowfullscreen></iframe></p>

      </div>
      <div class="col-xs-12 col-sm-6 col-sm-offset-2">
        <p>Réalisateur: <strong><%=@movie.director%></strong></p>
        <p>Année de sortie: <strong><%= @movie.year.strftime("%Y") %></strong></p>
        <p>Titre d'origine: <strong><%= @movie.original_title %></strong></p>
        <p>Langue: <strong><%=@movie.language%></strong></p>
        <% if @movie.length.present? %>
        <p>Durée: <strong><%=@movie.length.strftime("%Hh%M")%></strong></p>
        <%end %>
        <p>À partir de: <strong><%=@movie.age%> ans</strong></p>
         <i class="fa fa-eye"> <%=@movie.impressionist_count(:filter=>:session_hash) %></i>
      </div>

  </div>

<% if @same_director.present? %>
<p class="text-center margin-top-fifty"><strong>Les autres films de <%=@movie.director%></strong></p>
<% @same_director.each do |movie| %>
<div class="col-xs-12 col-sm-5">

      <!-- insert <div class="card"> -->



          <div class="card-body">
             <div class="title-card text-center"><p style= "color: #43465b; font-weight: bold; font-family: Raleway; font-size: 18px;"> <%=movie.category%></p>
            </div>
             <div class="card-picture"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
              <%= cloudinary_url movie.picture, height: 300, :crop => :scale %>

             );">

                  <p><%=movie.name %></p>


                  <a href="<%= movie_url(movie) %>" >
                    <div class="card-hover">
                  <h4 class="raleway" style= "color: black; margin-bottom: 30px;">Un film de <%=movie.director%></h4>
                </div>
                  </a>
              </div>
              <div class="card-likes">
              <ul class="list-inline">
                <ul class="list-inline">
                <li><i class="fa fa-heart"></i> 140</li>
                <li><i class="fa fa-eye"></i> <%=movie.impressionist_count(:filter=>:session_hash)%></li>
                <li>A partir de <%= movie.age %> ans</li>
              </ul>
              </ul>
              </ul>
            </div>

          </div>


    </div>
    <% end %>
  <% end %>

</div>








<p class="text-center">

<%= link_to "Supprimer le film", movie_path, class: "btn btn-success btn-white", id:"margin-top", method: :delete %>
<%= link_to "Modifier le film", edit_movie_path, class: "btn btn-success btn-white", id:"margin-top" %>

</p>

