<% content_for :nav, render('shared/navbar_home') %>


<div class="container">
  <div class="row">
    <% @movies.each do |movie| %>
    <div class="col-xs-12 col-sm-4">

      <!-- insert <div class="card"> -->



          <div class="card-body">
             <div class="title-card text-center"><p style= "color: #43465b; font-weight: bold; font-family: Raleway; font-size: 18px;"> <%=movie.category%></p>
            </div>
             <div class="card-picture"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(
              <%= cloudinary_url movie.picture, height: 300, :crop => :scale %>

             );">

                  <p><%=movie.name %></p>

                  <a href="<%= movie_url(movie) %>" >
                    <div class="card-hover">
                  <h4 class="raleway" style= "color: black; margin-bottom: 30px;"><%=movie.name%></h4>
                </div>
                  </a>
              </div>
              <div class="card-likes">
              <ul class="list-inline">
                <li><i class="fa fa-map-marker"></i> <%=movie.director%></li>


          <% if movie.updated_at %>
      <%=movie.updated_at.strftime("%d/%m/%y") %>
      <% else %>
      <%= movie.created_at.strftime("%d/%m/%y") %>
      <% end %></p>
              </ul>
            </div>

          </div>


    </div>
    <% end %>



  </div>

</div>
