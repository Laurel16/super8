<div class="background-new-notice ">
  <div class="bg-gradient-new-notice">
    <div class="form-group margin-top">
      <div class="container-lg margin-top">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <div class="background-white-new-notice">

      <%= simple_form_for @movie do |f| %>
      <%= f.input :category, collection: Movie::CATEGORIES, label: "Catégorie", prompt: "Choissisez une catégorie" %>
      <%= f.input :age, collection: Movie::AGES, label: "Tranche d'âge", prompt: "Choissisez un âge" %>
      <%= f.input :name, label: "Titre du film"%>
      <%= f.input :director, label: "Metteur en scène"%>
      <%= f.input :year, label: "Année de sortie" %>
     <%= f.input :picture, label: "Voulez-vous ajouter une photo?" %>
      <%= f.input :picture_cache, as: :hidden %>
      <%= f.input :trailer, label: "trailer" %>

      <%= f.button :submit, class: "btn btn-success" %>
      <% if @movie.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @movie.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    <% end %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
